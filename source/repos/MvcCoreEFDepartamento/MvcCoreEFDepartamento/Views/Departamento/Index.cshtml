@model List<MvcCoreEFDepartamento.Models.Departamento>



<h1>Lista de Departamentos</h1>

<p>
    <a asp-action="Create" asp-controller="Departamento" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Número</th>
            <th>Nombre</th>
            <th>Localización</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departamento in Model)
        {
            <tr>
                <td>@departamento.idDepartamento</td>
                <td>@departamento.DNombre</td>
                <td>@departamento.Loc</td>
                <td>
                    <a asp-action="Edit" asp-controller="Departamento" asp-route-id="@departamento.idDepartamento" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details"  asp-controller="Departamento"  asp-route-id="@departamento.idDepartamento" class="btn btn-info btn-sm">Detalles</a>
                   <a asp-action="Delete"  asp-controller="Departamento"  asp-route-id="@departamento.idDepartamento" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
